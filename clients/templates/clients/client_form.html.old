{% extends 'base.html' %}
{% load bootstrap4 %}
{% load i18n %}
{% block body_block %}
<div class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <div class="card-header card-header-success">
                <h4 class="card-title">{% if form.instance.pk%}{% trans "Edit Client" %}
                                        {% else %}{% trans "New Client" %}
                                        {% endif %}</h4>
                <p class="card-category">{% trans "Complete le profile" %}</p>
              </div>
              <div class="card-body">
                <form action="{% url 'clients:edit' slug=client.slug %}" method="post">
                  {% csrf_token %}
                  <div class="row">

                    <div class="col-md-6">
                      <div class="form-group">
                        {% bootstrap_field form.name %}
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        {% bootstrap_field form.email %}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="form-group">
                        {% bootstrap_field form.tel %}
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        {% bootstrap_field form.url %}
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-4">
                      <div class="form-group">
                        {% bootstrap_field form.contact %}
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        {% bootstrap_field form.contact_tel %}
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="form-group">
                        {% bootstrap_field form.contact_email %}
                      </div>
                    </div>

                  </div>
                  <div class="row">
                    <div class="col-md-12">
                        {% bootstrap_field form.address %}

                    </div>
                  </div>
                  <button type="submit" class="btn btn-primary pull-right">{% if form.instance.pk%}{% trans "Update Client" %}
                                                                            {% else %}{% trans "Create Client" %}
                                                                            {% endif %}</button>
                  <div class="clearfix"></div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-4">
            {% if form.instance.pk%}
            <div class="row">
              <div class="col-12">
                <div class="card card-chart">
                  <div class="card-header card-header-success">
                    <div id="container" class="ct-chart" data-url="{% url 'solutions:ajax_load_chart' %}?type=pie{% for key, value in request.GET.items %}{% if key != 'page' %}&{{ key }}={{ value }}{% endif %}{% endfor %}"></div>

                  </div>
                  <div class="card-body">
                    <h4 class="card-title">{% trans "Tickets Status" %}</h4>
                    {% comment %} <p class="card-category">
                      <span class="text-success"><i class="fa fa-long-arrow-up"></i> 55% </span> increase in today sales.</p>
                  {% endcomment %}</div>
                  {% comment %} <div class="card-footer">
                    <div class="stats">
                      <i class="material-icons">access_time</i> updated 4 minutes ago
                    </div>
                  </div> {% endcomment %}
                </div>
              </div>

            </div>
            {% endif %}
          </div>
        </div>
      </div>
    </div>




{% endblock %}
